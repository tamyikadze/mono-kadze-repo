    "pg": "^8.14.1"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "glob": "^11.0.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@repo/config-eslint": "workspace:*",
    "@repo/config-prettier": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
