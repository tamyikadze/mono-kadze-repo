    "glob": "^11.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@repo/config-eslint": "workspace:*",
    "@repo/config-prettier": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@types/node": "^22.13.14",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.23.0",
