  "description": "",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./zod": "./src/zod.ts"
  },
  "scripts": {
    "dev": "dotenv -e ../../.env drizzle-kit studio --port 4001",
    "db:push": "dotenv -e ../../.env -- drizzle-kit push",
