    "build": "tsc",
    "lint": "eslint './**'",
    "lint:fix": "eslint './**' --fix",
    "db:create": "dotenv -e ../../.env -- tsx src/utils/create-db.ts",
    "type-check": "tsc --noEmit",
    "generate:export-schema": "tsx src/utils/generate-export-schema.ts"
  },
